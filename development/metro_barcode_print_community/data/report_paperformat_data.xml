<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="paperformat_product_label" model="report.paperformat">
        <field name="name">Label</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">50</field>
        <field name="page_width">50</field>
        <field name="orientation">Landscape</field>
        <field name="margin_top">3</field>
        <field name="margin_bottom">0</field>
        <field name="margin_left">0</field>
        <field name="margin_right">0</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">80</field>
    </record>
    <record id="action_print_product_labels" model="ir.actions.report">
        <field name="paperformat_id" ref="metro_barcode_print_community.paperformat_product_label"/>
    </record>
</odoo>