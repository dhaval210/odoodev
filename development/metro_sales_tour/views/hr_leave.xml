        <field name="model">hr.leave</field>
        <field name="inherit_id" ref="hr_holidays.hr_leave_view_form"/>
        <field name="priority">2</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_draft']" position="after">
                <button string="Verk채uferneuzuweisung"  class="oe_highlight" name="action_reassign" type="object"
                        attrs="{'invisible': [('sale_order_reassign_count','>',0)]}"/>
                <button string="Verk채uferneuzuweisung R체ckg채ngig"  name="action_reassign_cancel" type="object"
