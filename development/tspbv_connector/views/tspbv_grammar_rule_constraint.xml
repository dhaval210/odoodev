<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- tspbv.dialoglist form view -->
    <record id="tspbv_grammar_rule_constraint_view_form" model="ir.ui.view">
        <field name="name">tspbv.grammar.rule.constraint.view.form</field>
        <field name="model">tspbv.grammar.rule.constraint</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="type"/>
                    </group>
                    <group>
                        <field name="max"/>
                        <field name="min"/>
                    </group>
                    <group attrs="{'invisible':[('type', '!=', 'float')]}">
                        <field name="decimalsmax"/>
                        <field name="decimalsmin"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
