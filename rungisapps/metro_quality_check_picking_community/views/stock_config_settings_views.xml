<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_stock_config_settings_inherit_add_settings" model="ir.ui.view">
            <field name="name">stock settings</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="stock.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <div id="production_lot_info" position="before">
                    <h2>Quality Check Products</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="vehicle_product_id"/>
                                <div class="content-group">
                                    <div class="mt16">
                                        <field name="vehicle_product_id" />
                                    </div>
                                </div>
                                <label for="stracking_product_id"/>
                                <div>
                                    <div class="mt16">
                                        <field name="stracking_product_id" />
                                    </div>
                                </div>
<!--                            <field name="door_product_id" /-->
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_right_pane">
                                <label for="temprature_product_id"/>
                                <div>
                                    <div class="mt16">
                                        <field name="temprature_product_id" />
                                    </div>
                                </div>
                                <label for="chilled_temprature_product_id"/>
                                <div>
                                    <div class="mt16">
                                        <field name="chilled_temprature_product_id" />
                                    </div>
                                </div>
                                <label for="custom_quality_team_id"/>
                                <div>
                                    <div class="mt16">
                                        <field name="custom_quality_team_id" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </field>
        </record>
    </data>
</odoo>
