<?xml version='1.0' encoding='utf-8'?>
<odoo>    <!--Message Wizard -->
    <record id="message_wiz_view_form" model="ir.ui.view">
        <field name="name">message.wiz.form</field>
        <field name="model">message.wiz</field>
        <field name="arch" type="xml">
            <form>
                <field name="message" readonly="True"/>
                <footer>
                    <button name="action_close" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
