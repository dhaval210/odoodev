<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.catchweight</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='tis_catch_weight']/div[1]" position="inside">
                <div class="col-xs-12 col-md-6 o_setting_box"
                     title="Check to activate Deviation warning during stock operations">
                    <div class="o_setting_left_pane">
                        <field name="group_deviation_warning"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="group_deviation_warning"/>
                        <div class="text-muted">
                            Deviation warning during stock operations
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>


